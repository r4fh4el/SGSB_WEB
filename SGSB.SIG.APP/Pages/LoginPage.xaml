<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SGSB.SIG.APP.Pages.LoginPage"
              BackgroundColor="BlueViolet"
             Title="LoginPage">
    <Frame HasShadow="True" Margin="20" Padding="20" CornerRadius="15" IsVisible="True" x:Name="Step1Frame">
        <StackLayout Padding="20">

            <Image Source="sigtranparente.png"  HeightRequest="100" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" />




            <Entry x:Name="UsernameEntry" Placeholder="Username" Margin="0,10,0,10" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Margin="0,0,0,10" />

            <Button Text="Login" Clicked="LoginButton_Clicked" BackgroundColor="#f38f00" TextColor="White" />

            <Label Text="Esqueceu a senha?" TextColor="#3498db" HorizontalOptions="Center" Margin="0,20,0,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnForgotPasswordTapped" />
                </Label.GestureRecognizers>
            </Label>
      
    </StackLayout>
    </Frame>
</ContentPage>