@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Pages/Shared/_LayoutLogin.cshtml";
}






                <form id="account" method="post" >
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <span class="login100-form-title p-b-29">
                        <img width="78%" src="images/LogoFinalTranparente.png">

                    </span>
                    <span class="login100-form-title p-b-29">

                        Login
                    </span>

                    <div class="wrap-input100 validate-input m-b-13" data-validate="e-mail é obrigatório">
                        <label asp-for="Input.Email" class="label-input100"></label>
                        <input asp-for="Input.Email" class="input100" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                    <div class="wrap-input100 validate-input" data-validate="Senha é obrigatório">

                        <label asp-for="Input.Password" class="label-input100"></label>
                        <input asp-for="Input.Password" class="input100" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                      </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div class="text-right p-t-8 p-b-31">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Esqueçeu a senha?</a>
                        </p>
                    
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar email de confirmação</a>
                        </p>

                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                           
                            <button type="submit" class="login100-form-btn">Login</button>
        
        </div>
                    </div>



                    <div class="flex-col-c p-t-15">
                        <span class="txt1 p-b-17">
                            Ou inscreva-se usando
                        </span>

        <a asp-page="./Register" class="txt2" asp-route-returnUrl="@Model.ReturnUrl"> Inscrever-se</a>

                    </div>
                </form>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
