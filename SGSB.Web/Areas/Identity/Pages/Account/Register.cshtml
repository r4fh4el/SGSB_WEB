@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Pages/Shared/_LayoutLogin.cshtml";
}

<h1>@ViewData["Title"]</h1>


        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email" class="label-input100"></label>
                <input asp-for="Input.Email" class="input100" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"class="label-input100"></label>
                <input asp-for="Input.Password" class="input100" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="label-input100"></label>
                <input asp-for="Input.ConfirmPassword" class="input100" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
