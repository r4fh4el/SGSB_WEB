@page "/SistemaDrenagem/Editar"
@page "/SistemaDrenagem/Editar/{id}"

@inject SistemaDrenagemService SistemaDrenagemService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data
@using SGSB.Web.Models;


<h3>Editar</h3>


<EditForm Model="@SistemaDrenagemModel" OnSubmit="EditarTipoMaterial" >
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">

        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Nome da Sistema Drenagem </label>
                <InputText @bind-Value="@SistemaDrenagemModel.Nome" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> SistemaDrenagemModel.Nome)" />
            </div>




        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Editar" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private SistemaDrenagemModel SistemaDrenagemModel = new SistemaDrenagemModel();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


       await Edit(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {
        

    }

    

    public async Task Edit(string Id)
    {
       var tipo = await SistemaDrenagemService.GetSistemaDrenagemId(int.Parse(Id));
        var tipos = new SistemaDrenagemModel()
            {
                BarragemId = tipo.BarragemId,
                Id = tipo.Id,
                Nome = tipo.Nome,

            };

        SistemaDrenagemModel = tipos;
    }

    protected async Task EditarTipoMaterial()
    {

        await SistemaDrenagemService.EditarSistemaDrenagem(SistemaDrenagemModel);
        NavigationManager.NavigateTo("SistemaDrenagem/index");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("SistemaDrenagem/index");
    }


}
