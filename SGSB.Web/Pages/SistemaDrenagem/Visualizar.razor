
@page "/SistemaDrenagem/Visualizar"
@page "/SistemaDrenagem/Visualizar/{id}"

@inject SistemaDrenagemService SistemaDrenagemService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data


<h3>Visualizar</h3>


<EditForm Model="@SistemaDrenagemModel" >
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Nome da Sistema Drenagem </label>
                <InputText @bind-Value="@SistemaDrenagemModel.Nome" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> SistemaDrenagemModel.Nome)" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
       
                <input type="button" class="btn" @onclick="@Cancel" value="Voltar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private SistemaDrenagem SistemaDrenagemModel = new SistemaDrenagem();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


       await Ver(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    public async Task Ver(string Id)
    {
        SistemaDrenagemModel =  await SistemaDrenagemService.GetSistemaDrenagemId(int.Parse(Id));
    }



  
    void Cancel()
    {
        NavigationManager.NavigateTo("SistemaDrenagem/index");
    }


}
