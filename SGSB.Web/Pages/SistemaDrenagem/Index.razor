@using BlazorTable
@using SGSB.Web.Models;

@inject Microsoft.JSInterop.IJSRuntime JSRuntime

@if (SistemaDrenagem == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div class="col-md-3">
        <a href="SistemaDrenagem/cadastro" class="btn btn-success h2">Adicionar Novo </a>
