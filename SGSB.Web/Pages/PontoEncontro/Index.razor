@page "/PontoEncontro/Index"

@using SGSB.Web.Data
@inject PontoEncontroService PontoEncontroService
@using Model 
@inject NavigationManager NavigationManager
@inject HttpClient http
@using BlazorTable

@inject Microsoft.JSInterop.IJSRuntime JSRuntime

@if (PontoEncontro == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div class="col-md-3">
        <a href="PontoEncontro/cadastro" class="btn btn-success h2">Adicionar Novo </a>
    </div>

    <Table style="font-size:14px;" TableItem="PontoEncontro" Items="PontoEncontro" PageSize="10">
        <Column TableItem="PontoEncontro" Title="ID" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%" />
        <Column TableItem="PontoEncontro" Title="BarragemId" Field="@(x => x.BarragemId)" Sortable="true" Filterable="true" Width="10%" />
        <Column TableItem="PontoEncontro" Title="Nome" Field="@(x => x.Nome)" Sortable="true" Filterable="true" Width="30%" />
        <Column TableItem="PontoEncontro" Title="Latitude" Field="@(x => x.Latitude)" Sortable="true" Filterable="true" Width="30%" />
        <Column TableItem="PontoEncontro" Title="Longitude" Field="@(x => x.Longitude)" Sortable="true" Filterable="true" Width="30%" />


        <Column TableItem="PontoEncontro" Title="Visualizar" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a href="PontoEncontro/Visualizar/@context.Id" class="btn btn-info h4"> Visualizar</a>
            </Template>
        </Column>
        <Column TableItem="PontoEncontro" Title="Editar" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a TableItem="PontoEncontro" href="PontoEncontro/Editar/@context.Id" class="btn btn-warning h4"> Editar</a>
            </Template>
        </Column>
        <Column TableItem="PontoEncontro" Title="Excluir" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a href="../PontoEncontro/Excluir/@context.Id" class="btn btn-danger h4"> Excluir</a>
            </Template>
        </Column>

        <Pager ShowPageNumber="true" ShowTotalCount="true" />
    </Table>

}

@code {

    private List<PontoEncontro> PontoEncontro;
    //private PontoEncontro PontoEncontroModel = new PontoEncontro();
    protected override async Task OnInitializedAsync()
    {
        PontoEncontro = await PontoEncontroService.GetPontoEncontro();
 
    }


    private PontoEncontro objPontoEncontroModel = new PontoEncontro();


    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    protected async Task Editar(int id)
    {
       await PontoEncontroService.EditarPontoEncontro(objPontoEncontroModel);

    }
    protected async Task Visualizar(int id)
    {

        await PontoEncontroService.CadastrarPontoEncontro(objPontoEncontroModel);
      
    }

    protected async Task CreatePontoEncontro()
    {

        await PontoEncontroService.CadastrarPontoEncontro(objPontoEncontroModel);
        PontoEncontro.Add(objPontoEncontroModel);

        StateHasChanged();


    }
    void Cancel()
    {
        NavigationManager.NavigateTo("PontoEncontro/index");
    }

}
