@page "/PontoEncontro/Excluir"
@page "/PontoEncontro/Excluir/{id}"

@inject PontoEncontroService PontoEncontroService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data


<h3 class="alert-warning">Deseja excluir?</h3>


<EditForm Model="@PontoEncontroModel" OnSubmit="ExcluirPontoEncontro">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Nome da PontoEncontro</label>
                <InputText @bind-Value="@PontoEncontroModel.Nome" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> PontoEncontroModel.Nome)" />
            </div>




        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Excluir" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private PontoEncontro PontoEncontroModel = new PontoEncontro();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


        await Delete(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    public async Task Delete(string Id)
    {

        PontoEncontroModel = await PontoEncontroService.GetPontoEncontroId(int.Parse(Id));

    }

    protected async Task ExcluirPontoEncontro()
    {
        try
        {
            await PontoEncontroService.DeletarPontoEncontro(PontoEncontroModel);
            NavigationManager.NavigateTo("PontoEncontro/index");
        }
        catch (Exception e)
        {

            throw e;
        }

    }

    protected async Task CreatePontoEncontro()
    {

        await PontoEncontroService.CadastrarPontoEncontro(PontoEncontroModel);
        NavigationManager.NavigateTo("PontoEncontro/index");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("PontoEncontro/index");
    }


}
