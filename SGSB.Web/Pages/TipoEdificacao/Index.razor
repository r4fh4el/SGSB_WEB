@page "/TipoEdificacao/Index"

@using SGSB.Web.Data
@inject TipoEdificacaoService TipoEdificacaoService
@using Model 
@inject NavigationManager NavigationManager
@inject HttpClient http
@using BlazorTable
@using SGSB.Web.Models;

@inject Microsoft.JSInterop.IJSRuntime JSRuntime

@if (TipoEdificacao == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div class="col-md-3">
        <a href="TipoEdificacao/cadastro" class="btn btn-success h2">Adicionar Novo </a>
    </div>

    <Table style="font-size:14px;" TableItem="TipoEdificacao" Items="TipoEdificacao" PageSize="10">
        <Column TableItem="TipoEdificacao" Title="ID" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%" />
        <Column TableItem="TipoEdificacao" Title="Nome" Field="@(x => x.Nome)" Sortable="true" Filterable="true" Width="30%" />


        <Column TableItem="TipoEdificacao" Title="Visualizar" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a href="TipoEdificacao/Visualizar/@context.Id" class="btn btn-info h4"> Visualizar</a>
            </Template>
        </Column>
        <Column TableItem="TipoEdificacao" Title="Editar" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a TableItem="TipoEdificacao" href="TipoEdificacao/Editar/@context.Id" class="btn btn-warning h4"> Editar</a>
            </Template>
        </Column>
        <Column TableItem="TipoEdificacao" Title="Excluir" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a href="../TipoEdificacao/Excluir/@context.Id" class="btn btn-danger h4"> Excluir</a>
            </Template>
        </Column>

        <Pager ShowPageNumber="true" ShowTotalCount="true" />
    </Table>

}

@code {

    private List<TipoEdificacao> TipoEdificacao;
    //private TipoEdificacao TipoEdificacaoModel = new TipoEdificacao();
    protected override async Task OnInitializedAsync()
    {
        TipoEdificacao = await TipoEdificacaoService.GetTipoEdificacao();
 
    }


    private TipoEdificacaoModel objTipoEdificacaoModel = new TipoEdificacaoModel();


    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    protected async Task Editar(int id)
    {
   
        await TipoEdificacaoService.EditarTipoEdificacao(objTipoEdificacaoModel);

    }
    protected async Task Visualizar(int id)
    {
        var tipoEdificacao = new Entidades.Entidades.TipoEdificacao()
            {
                Nome = objTipoEdificacaoModel.Nome


            };
     
      
    }

  
    void Cancel()
    {
        NavigationManager.NavigateTo("TipoEdificacao/index");
    }

}
