@page "/TipoEdificacao/Excluir"
@page "/TipoEdificacao/Excluir/{id}"

@inject TipoEdificacaoService TipoEdificacaoService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data


<h3 class="alert-warning">Deseja excluir?</h3>


<EditForm Model="@TipoEdificacaoModel" OnSubmit="ExcluirTipoEdificacao">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Nome da TipoEdificacao</label>
                <InputText @bind-Value="@TipoEdificacaoModel.Nome" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> TipoEdificacaoModel.Nome)" />
            </div>




        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Excluir" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private TipoEdificacao TipoEdificacaoModel = new TipoEdificacao();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


        await Delete(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    public async Task Delete(string Id)
    {

        TipoEdificacaoModel = await TipoEdificacaoService.GetTipoEdificacaoId(int.Parse(Id));

    }

    protected async Task ExcluirTipoEdificacao()
    {
        try
        {
            await TipoEdificacaoService.DeletarTipoEdificacao(TipoEdificacaoModel);
            NavigationManager.NavigateTo("TipoEdificacao/index");
        }
        catch (Exception e)
        {

            throw e;
        }

    }


    void Cancel()
    {
        NavigationManager.NavigateTo("TipoEdificacao/index");
    }


}
