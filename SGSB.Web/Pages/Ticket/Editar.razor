@page "/Ticket/Editar"
@page "/Ticket/Editar/{id}"

@inject TicketService TicketService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data


<h3>Editar</h3>


<EditForm Model="@TicketModel" OnSubmit="EditarTipoMaterial" >
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Titulo </label>
                <InputText @bind-Value="@TicketModel.Titulo" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> TicketModel.Titulo)" />
            </div>




        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Descrição </label>
                <InputText @bind-Value="@TicketModel.Descricao" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> TicketModel.Descricao)" />
            </div>




        </div>



    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Editar" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private Ticket TicketModel = new Ticket();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


       await Edit(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {
        

    }

    

    public async Task Edit(string Id)
    {
        TicketModel = await  TicketService.GetTicketId(int.Parse(Id));
        
    }

    protected async Task EditarTipoMaterial()
    {

        await TicketService.EditarTicket(TicketModel);
        NavigationManager.NavigateTo("Ticket/index");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Ticket/index");
    }


}
