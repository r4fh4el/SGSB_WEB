
@page "/Ticket/Visualizar"
@page "/Ticket/Visualizar/{id}"

@inject TicketService TicketService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data


<h3>Visualizar</h3>


<EditForm Model="@TicketModel" >
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Titulo</label>
                <InputText @bind-Value="@TicketModel.Titulo" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> TicketModel.Titulo)" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
       
                <input type="button" class="btn" @onclick="@Cancel" value="Voltar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private Ticket TicketModel = new Ticket();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


       await Ver(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    public async Task Ver(string Id)
    {
        TicketModel =  await TicketService.GetTicketId(int.Parse(Id));
    }



  
    void Cancel()
    {
        NavigationManager.NavigateTo("Ticket/index");
    }


}
