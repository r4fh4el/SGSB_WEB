
@page "/TipoEmpreendedor/Visualizar"
@page "/TipoEmpreendedor/Visualizar/{id}"

@inject TipoEmpreendedorService TipoEmpreendedorService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data


<h3>Visualizar</h3>


<EditForm Model="@TipoEmpreendedorModel" >
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Nome do Tipo Empreendedor </label>
                <InputText @bind-Value="@TipoEmpreendedorModel.Nome" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> TipoEmpreendedorModel.Nome)" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
       
                <input type="button" class="btn" @onclick="@Cancel" value="Voltar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private TipoEmpreendedor TipoEmpreendedorModel = new TipoEmpreendedor();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


       await Ver(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    public async Task Ver(string Id)
    {
        TipoEmpreendedorModel =  await TipoEmpreendedorService.GetTipoEmpreendedorId(int.Parse(Id));
    }



  
    void Cancel()
    {
        NavigationManager.NavigateTo("TipoEmpreendedor/index");
    }


}
