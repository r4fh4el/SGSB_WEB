@page "/TipoEmpreendedor/Index"

@using SGSB.Web.Data
@inject TipoEmpreendedorService TipoEmpreendedorService
@using Model 
@inject NavigationManager NavigationManager
@inject HttpClient http
@using BlazorTable

@inject Microsoft.JSInterop.IJSRuntime JSRuntime

@if (TipoEmpreendedor == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div class="col-md-3">
        <a href="TipoEmpreendedor/cadastro" class="btn btn-success h2">Adicionar Novo </a>
    </div>

    <Table style="font-size:14px;" TableItem="TipoEmpreendedor" Items="TipoEmpreendedor" PageSize="10">
        <Column TableItem="TipoEmpreendedor" Title="ID" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%" />
        <Column TableItem="TipoEmpreendedor" Title="Nome" Field="@(x => x.Nome)" Sortable="true" Filterable="true" Width="30%" />


        <Column TableItem="TipoEmpreendedor" Title="Visualizar" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a href="TipoEmpreendedor/Visualizar/@context.Id" class="btn btn-info h4"> Visualizar</a>
            </Template>
        </Column>
        <Column TableItem="TipoEmpreendedor" Title="Editar" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a TableItem="TipoEmpreendedor" href="TipoEmpreendedor/Editar/@context.Id" class="btn btn-warning h4"> Editar</a>
            </Template>
        </Column>
        <Column TableItem="TipoEmpreendedor" Title="Excluir" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a href="../TipoEmpreendedor/Excluir/@context.Id" class="btn btn-danger h4"> Excluir</a>
            </Template>
        </Column>

        <Pager ShowPageNumber="true" ShowTotalCount="true" />
    </Table>

}

@code {

    private List<TipoEmpreendedor> TipoEmpreendedor;
    //private TipoEmpreendedor TipoEmpreendedorModel = new TipoEmpreendedor();
    protected override async Task OnInitializedAsync()
    {
        TipoEmpreendedor = await TipoEmpreendedorService.GetTipoEmpreendedor();
 
    }


    private TipoEmpreendedor objTipoEmpreendedorModel = new TipoEmpreendedor();


    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    protected async Task Editar(int id)
    {
       await TipoEmpreendedorService.EditarTipoEmpreendedor(objTipoEmpreendedorModel);

    }
    protected async Task Visualizar(int id)
    {

        await TipoEmpreendedorService.CadastrarTipoEmpreendedor(objTipoEmpreendedorModel);
      
    }

    protected async Task CreateTipoEmpreendedor()
    {

        await TipoEmpreendedorService.CadastrarTipoEmpreendedor(objTipoEmpreendedorModel);
        TipoEmpreendedor.Add(objTipoEmpreendedorModel);

        StateHasChanged();


    }
    void Cancel()
    {
        NavigationManager.NavigateTo("TipoEmpreendedor/index");
    }

}
