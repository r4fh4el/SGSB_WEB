@page "/TipoMaterialBarragem/Excluir"
@page "/TipoMaterialBarragem/Excluir/{id}"

@inject TipoMaterialBarragemService TipoMaterialBarragemService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data


<h3 class="alert-warning">Deseja excluir?</h3>


<EditForm Model="@TipoMaterialBarragemModel" OnSubmit="ExcluirTipoMaterialBarragem">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Nome da TipoMaterialBarragem</label>
                <InputText @bind-Value="@TipoMaterialBarragemModel.Nome" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> TipoMaterialBarragemModel.Nome)" />
            </div>




        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Excluir" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private TipoMaterialBarragem TipoMaterialBarragemModel = new TipoMaterialBarragem();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


        await Delete(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    public async Task Delete(string Id)
    {

        TipoMaterialBarragemModel = await TipoMaterialBarragemService.GetTipoMaterialBarragemId(int.Parse(Id));

    }

    protected async Task ExcluirTipoMaterialBarragem()
    {
        try
        {
            await TipoMaterialBarragemService.DeletarTipoMaterialBarragem(TipoMaterialBarragemModel);
            NavigationManager.NavigateTo("TipoMaterialBarragem/index");
        }
        catch (Exception e)
        {

            throw e;
        }

    }

    protected async Task CreateTipoMaterialBarragem()
    {

        await TipoMaterialBarragemService.CadastrarTipoMaterialBarragem(TipoMaterialBarragemModel);
        NavigationManager.NavigateTo("TipoMaterialBarragem/index");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("TipoMaterialBarragem/index");
    }


}
