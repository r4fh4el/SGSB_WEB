@page "/CondicaoFundacao/Excluir"
@page "/CondicaoFundacao/Excluir/{id}"

@inject CondicaoFundacaoService CondicaoFundacaoService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data


<h3 class="alert-warning">Deseja excluir?</h3>


<EditForm Model="@CondicaoFundacaoModel" OnSubmit="ExcluirCondicaoFundacao">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">

        <div class="form-group">
            <label for="Cota" class="control-label">Nome </label>
            <InputText @bind-Value="@CondicaoFundacaoModel.Nome" type="Text" class="form-control" />
            <ValidationMessage For="@(()=> CondicaoFundacaoModel.Nome)" />




        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Excluir" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private CondicaoFundacao CondicaoFundacaoModel = new CondicaoFundacao();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


        await Delete(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    public async Task Delete(string Id)
    {

        CondicaoFundacaoModel = await CondicaoFundacaoService.GetCondicaoFundacaoId(int.Parse(Id));

    }

    protected async Task ExcluirCondicaoFundacao()
    {
        try
        {
            await CondicaoFundacaoService.DeletarCondicaoFundacao(CondicaoFundacaoModel);
            NavigationManager.NavigateTo("CondicaoFundacao/index");
        }
        catch (Exception e)
        {

            throw e;
        }

    }

    protected async Task CreateCondicaoFundacao()
    {

        await CondicaoFundacaoService.CadastrarCondicaoFundacao(CondicaoFundacaoModel);
        NavigationManager.NavigateTo("CondicaoFundacao/index");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("CondicaoFundacao/index");
    }


}
