@page "/Instrumentos/Index"

@using SGSB.Web.Data
@inject InstrumentosService InstrumentosService
@using Model 
@inject NavigationManager NavigationManager
@inject HttpClient http
@using BlazorTable

@inject Microsoft.JSInterop.IJSRuntime JSRuntime

@if (Instrumentos == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div class="col-md-3">
        <a href="Instrumentos/cadastro" class="btn btn-success h2">Adicionar Novo </a>
    </div>

    <Table style="font-size:14px;" TableItem="Instrumentos" Items="Instrumentos" PageSize="10">
        <Column TableItem="Instrumentos" Title="ID" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%" />
        <Column TableItem="Instrumentos" Title="Nome" Field="@(x => x.Nome)" Sortable="true" Filterable="true" Width="30%" />


        <Column TableItem="Instrumentos" Title="Visualizar" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a href="Instrumentos/Visualizar/@context.Id" class="btn btn-info h4"> Visualizar</a>
            </Template>
        </Column>
        <Column TableItem="Instrumentos" Title="Editar" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a TableItem="Instrumentos" href="Instrumentos/Editar/@context.Id" class="btn btn-warning h4"> Editar</a>
            </Template>
        </Column>
        <Column TableItem="Instrumentos" Title="Excluir" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a href="../Instrumentos/Excluir/@context.Id" class="btn btn-danger h4"> Excluir</a>
            </Template>
        </Column>

        <Pager ShowPageNumber="true" ShowTotalCount="true" />
    </Table>

}

@code {

    private List<Instrumentos> Instrumentos;
    //private Instrumentos InstrumentosModel = new Instrumentos();
    protected override async Task OnInitializedAsync()
    {
        Instrumentos = await InstrumentosService.GetInstrumentos();
 
    }


    private Instrumentos objInstrumentosModel = new Instrumentos();


    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    protected async Task Editar(int id)
    {
       await InstrumentosService.EditarInstrumentos(objInstrumentosModel);

    }
    protected async Task Visualizar(int id)
    {
        var tipoMaterialBarragem = new Entidades.Entidades.Instrumentos()
            {
                Nome = objInstrumentosModel.Nome


            };
        await InstrumentosService.CadastrarInstrumentos(tipoMaterialBarragem);
      
    }

    protected async Task CreateInstrumentos()
    {
        var tipoMaterialBarragem = new Entidades.Entidades.Instrumentos()
            {
                Nome = objInstrumentosModel.Nome


            };
        await InstrumentosService.CadastrarInstrumentos(tipoMaterialBarragem);
        Instrumentos.Add(objInstrumentosModel);

        StateHasChanged();


    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Instrumentos/index");
    }

}
