@page "/Instrumentos/Excluir"
@page "/Instrumentos/Excluir/{id}"

@inject InstrumentosService InstrumentosService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data


<h3 class="alert-warning">Deseja excluir?</h3>


<EditForm Model="@InstrumentosModel" OnSubmit="ExcluirInstrumentos">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Nome da Instrumentos</label>
                <InputText @bind-Value="@InstrumentosModel.Nome" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> InstrumentosModel.Nome)" />
            </div>




        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Excluir" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private Instrumentos InstrumentosModel = new Instrumentos();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


        await Delete(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    public async Task Delete(string Id)
    {

        InstrumentosModel = await InstrumentosService.GetInstrumentosId(int.Parse(Id));

    }

    protected async Task ExcluirInstrumentos()
    {
        try
        {
            await InstrumentosService.DeletarInstrumentos(InstrumentosModel);
            NavigationManager.NavigateTo("Instrumentos/index");
        }
        catch (Exception e)
        {

            throw e;
        }

    }

    protected async Task CreateInstrumentos()
    {
        var tipoMaterialBarragem = new Entidades.Entidades.Instrumentos()
            {
                Nome = InstrumentosModel.Nome


            };
        await InstrumentosService.CadastrarInstrumentos(tipoMaterialBarragem);
        NavigationManager.NavigateTo("Instrumentos/index");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Instrumentos/index");
    }


}
