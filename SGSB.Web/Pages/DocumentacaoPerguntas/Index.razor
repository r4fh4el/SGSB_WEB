@page "/DocumentacaoPerguntas/Index"

@using SGSB.Web.Data
@inject DocumentacaoPerguntasService DocumentacaoPerguntasService
@using Model 
@inject NavigationManager NavigationManager
@inject HttpClient http
@using BlazorTable

@inject Microsoft.JSInterop.IJSRuntime JSRuntime

@if (DocumentacaoPerguntas == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div class="col-md-3">
        <a href="DocumentacaoPerguntas/cadastro" class="btn btn-success h2">Adicionar Novo </a>
    </div>

    <Table style="font-size:14px;" TableItem="DocumentacaoPerguntas" Items="DocumentacaoPerguntas" PageSize="10">
        <Column TableItem="DocumentacaoPerguntas" Title="ID" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%" />
        <Column TableItem="DocumentacaoPerguntas" Title="Pergunta" Field="@(x => x.Pergunta)" Sortable="true" Filterable="true" Width="30%" />


        <Column TableItem="DocumentacaoPerguntas" Title="Visualizar" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a href="DocumentacaoPerguntas/Visualizar/@context.Id" class="btn btn-info h4"> Visualizar</a>
            </Template>
        </Column>
        <Column TableItem="DocumentacaoPerguntas" Title="Editar" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a TableItem="DocumentacaoPerguntas" href="DocumentacaoPerguntas/Editar/@context.Id" class="btn btn-warning h4"> Editar</a>
            </Template>
        </Column>
        <Column TableItem="DocumentacaoPerguntas" Title="Excluir" Field="@(x => x.Id)" Sortable="true" Filterable="true" Width="10%">
            <Template>

                <a href="../DocumentacaoPerguntas/Excluir/@context.Id" class="btn btn-danger h4"> Excluir</a>
            </Template>
        </Column>

        <Pager ShowPageNumber="true" ShowTotalCount="true" />
    </Table>

}

@code {

    private List<DocumentacaoPerguntas> DocumentacaoPerguntas;
    //private DocumentacaoPerguntas DocumentacaoPerguntasModel = new DocumentacaoPerguntas();
    protected override async Task OnInitializedAsync()
    {
        DocumentacaoPerguntas = await DocumentacaoPerguntasService.GetDocumentacaoPerguntas();
 
    }


    private DocumentacaoPerguntas objDocumentacaoPerguntasModel = new DocumentacaoPerguntas();


    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    protected async Task Editar(int id)
    {
       await DocumentacaoPerguntasService.EditarDocumentacaoPerguntas(objDocumentacaoPerguntasModel);

    }
    protected async Task Visualizar(int id)
    {

        await DocumentacaoPerguntasService.CadastrarDocumentacaoPerguntas(objDocumentacaoPerguntasModel);
      
    }

    protected async Task CreateDocumentacaoPerguntas()
    {

        await DocumentacaoPerguntasService.CadastrarDocumentacaoPerguntas(objDocumentacaoPerguntasModel);
        DocumentacaoPerguntas.Add(objDocumentacaoPerguntasModel);

        StateHasChanged();


    }
    void Cancel()
    {
        NavigationManager.NavigateTo("DocumentacaoPerguntas/index");
    }

}
