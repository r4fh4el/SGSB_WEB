@page "/UsoSoloPredominante/Excluir"
@page "/UsoSoloPredominante/Excluir/{id}"

@inject UsoSoloPredominanteService UsoSoloPredominanteService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data


<h3 class="alert-warning">Deseja excluir?</h3>


<EditForm Model="@UsoSoloPredominanteModel" OnSubmit="ExcluirUsoSoloPredominante">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Nome da UsoSoloPredominante</label>
                <InputText @bind-Value="@UsoSoloPredominanteModel.Nome" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> UsoSoloPredominanteModel.Nome)" />
            </div>




        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Excluir" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private UsoSoloPredominante UsoSoloPredominanteModel = new UsoSoloPredominante();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


        await Delete(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    public async Task Delete(string Id)
    {

        UsoSoloPredominanteModel = await UsoSoloPredominanteService.GetUsoSoloPredominanteId(int.Parse(Id));

    }

    protected async Task ExcluirUsoSoloPredominante()
    {
        try
        {
            await UsoSoloPredominanteService.DeletarUsoSoloPredominante(UsoSoloPredominanteModel);
            NavigationManager.NavigateTo("UsoSoloPredominante/index");
        }
        catch (Exception e)
        {

            throw e;
        }

    }

    protected async Task CreateUsoSoloPredominante()
    {

        await UsoSoloPredominanteService.CadastrarUsoSoloPredominante(UsoSoloPredominanteModel);
        NavigationManager.NavigateTo("UsoSoloPredominante/index");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("UsoSoloPredominante/index");
    }


}
