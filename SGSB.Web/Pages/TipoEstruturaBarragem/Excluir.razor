@page "/TipoEstruturaBarragem/Excluir"
@page "/TipoEstruturaBarragem/Excluir/{id}"

@inject TipoEstruturaBarragemService TipoEstruturaBarragemService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model;

@using BlazorTable
@using SGSB.Web.Data


<h3 class="alert-warning">Deseja excluir?</h3>


<EditForm Model="@TipoEstruturaBarragemModel" OnSubmit="ExcluirTipoEstruturaBarragem">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Nome da TipoEstruturaBarragem</label>
                <InputText @bind-Value="@TipoEstruturaBarragemModel.Nome" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> TipoEstruturaBarragemModel.Nome)" />
            </div>




        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Excluir" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private TipoEstruturaBarragem TipoEstruturaBarragemModel = new TipoEstruturaBarragem();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


        await Delete(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    public async Task Delete(string Id)
    {

        TipoEstruturaBarragemModel = await TipoEstruturaBarragemService.GetTipoEstruturaBarragemId(int.Parse(Id));

    }

    protected async Task ExcluirTipoEstruturaBarragem()
    {
        try
        {
            await TipoEstruturaBarragemService.DeletarTipoEstruturaBarragem(TipoEstruturaBarragemModel);
            NavigationManager.NavigateTo("TipoEstruturaBarragem/index");
        }
        catch (Exception e)
        {

            throw e;
        }

    }

    protected async Task CreateTipoEstruturaBarragem()
    {

        await TipoEstruturaBarragemService.CadastrarTipoEstruturaBarragem(TipoEstruturaBarragemModel);
        NavigationManager.NavigateTo("TipoEstruturaBarragem/index");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("TipoEstruturaBarragem");
    }


}
