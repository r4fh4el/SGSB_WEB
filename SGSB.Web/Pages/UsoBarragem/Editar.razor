@page "/UsoBarragem/Editar"
@page "/UsoBarragem/Editar/{id}"

@inject UsoBarragemService UsoBarragemService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data
@using SGSB.Web.Models;


<h3>Editar</h3>


<EditForm Model="@UsoBarragemModel" OnSubmit="EditarUsoBarragem">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">

        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Nome uso da barragem</label>
                <InputText @bind-Value="@UsoBarragemModel.Nome" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> UsoBarragemModel.Nome)" />
            </div>




        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Editar" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private UsoBarragemModel UsoBarragemModel = new UsoBarragemModel();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


        await Edit(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {


    }



    public async Task Edit(string Id)
    {
        var uso = await UsoBarragemService.GetUsoBarragemId(int.Parse(Id));

        var usoBarragem = new UsoBarragemModel()
            {
                BarragemId = uso.BarragemId,
                GeracaoEnergia = uso.GeracaoEnergia,
                Nome = uso.Nome,
                Id = uso.Id

            };
        UsoBarragemModel = usoBarragem;
    }

    protected async Task EditarUsoBarragem()
    {

        await UsoBarragemService.EditarUsoBarragem(UsoBarragemModel);
        NavigationManager.NavigateTo("UsoBarragem/index");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("UsoBarragem/index");
    }


}
