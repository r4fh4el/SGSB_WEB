@page "/UsoBarragem/Excluir"
@page "/UsoBarragem/Excluir/{id}"

@inject UsoBarragemService UsoBarragemService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data


<h3 class="alert-warning">Deseja excluir?</h3>


<EditForm Model="@UsoBarragemModel" OnSubmit="ExcluirUsoBarragem">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Nome da Uso Barragem</label>
                <InputText @bind-Value="@UsoBarragemModel.Nome" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> UsoBarragemModel.Nome)" />
            </div>




        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Excluir" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>

@code {
    private UsoBarragem UsoBarragemModel = new UsoBarragem();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


        await Delete(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    public async Task Delete(string Id)
    {

        UsoBarragemModel = await UsoBarragemService.GetUsoBarragemId(int.Parse(Id));

    }

    protected async Task ExcluirUsoBarragem()
    {
        try
        {
            await UsoBarragemService.DeletarUsoBarragem(UsoBarragemModel);
            NavigationManager.NavigateTo("UsoBarragem/index");
        }
        catch (Exception e)
        {

            throw e;
        }

    }

   
    void Cancel()
    {
        NavigationManager.NavigateTo("UsoBarragem/index");
    }


}
