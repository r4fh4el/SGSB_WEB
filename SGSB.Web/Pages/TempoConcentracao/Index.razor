@code {
    // Variant variant = Variant.Outlined; // Campo não usado - removido para corrigir warning

    private List<TempoConcentracao> lstTempoConcentracao;
    public TempoConcentracao objTempoConcentracao = new TempoConcentracao();
    private double resultadoKirpch;
    private double resultadoCorpsEngineers;
    private double resultadoCarter;
    private double resultadoDooge;
    private double resultadoVenteChow;
    int idBarragemTempoConcentracao = 0;
    bool flagBarragem = false;
    private List<Model.Barragem> lstBarragem;
    private bool dadosCarregados = false;
    
    // Dados para gráficos e tabelas
    private List<TempoGrafico> dadosGraficoTempo = new List<TempoGrafico>();
    private List<TempoResumo> tabelaTempo = new List<TempoResumo>();

    private async Task OnBarragemChangedWrapper(object value)
    {
        int? intValue = value as int?;
        if (intValue.HasValue && intValue.Value > 0)
        {
            idBarragemTempoConcentracao = intValue.Value;
            await CarregarDadosBarragem();
        }
    }

    private async Task OnBarragemChanged(int? value)
    {
        if (value.HasValue && value.Value > 0)
        {
            idBarragemTempoConcentracao = value.Value;
            await CarregarDadosBarragem();
        }
    }

    private async Task CarregarDadosBarragem()
    {
        try
        {
            var resultado = await TempoConcentracaoService.GetTempoConcentracao();
            var tempoExistente = resultado.FirstOrDefault(x => x.BarragemId == idBarragemTempoConcentracao);

            if (tempoExistente != null)
            {
                objTempoConcentracao = tempoExistente;
                resultadoKirpch = tempoExistente.ResultadoKirpich;
                resultadoCorpsEngineers = tempoExistente.ResultadoCorpsEngineers;
                resultadoCarter = tempoExistente.ResultadoCarter;
                resultadoDooge = tempoExistente.ResultadoDooge;
                resultadoVenteChow = tempoExistente.ResultadoVenTeChow;
                
                // Atualizar gráficos e tabelas
                AtualizarGraficosETabelas();
                
                dadosCarregados = true;
                StateHasChanged();
            }
            else
            {
                dadosCarregados = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar dados: {ex.Message}");
            dadosCarregados = false;
        }
    }

    private void AtualizarGraficosETabelas()
    {
        // Preparar dados para gráfico
        dadosGraficoTempo = new List<TempoGrafico>
        {
            new TempoGrafico { Metodo = "Kirpich", Tempo = resultadoKirpch },
            new TempoGrafico { Metodo = "Corps Engineers", Tempo = resultadoCorpsEngineers },
            new TempoGrafico { Metodo = "Carter", Tempo = resultadoCarter },
            new TempoGrafico { Metodo = "Dooge", Tempo = resultadoDooge },
            new TempoGrafico { Metodo = "Ven te Chow", Tempo = resultadoVenteChow }
        };

        // Preparar dados para tabela
        tabelaTempo = new List<TempoResumo>
        {
            new TempoResumo 
            { 
                Metodo = "Kirpich", 
                Tempo = resultadoKirpch, 
                Ano = "1940",
                Autor = "Kirpich",
                Descricao = "Baseado no comprimento do rio principal e declividade"
            },
            new TempoResumo 
            { 
                Metodo = "Corps Engineers", 
                Tempo = resultadoCorpsEngineers, 
                Ano = "1946",
                Autor = "U.S. Army Corps of Engineers",
                Descricao = "Método desenvolvido pelo Corpo de Engenheiros dos EUA"
            },
            new TempoResumo 
            { 
                Metodo = "Carter", 
                Tempo = resultadoCarter, 
                Ano = "1961",
                Autor = "Carter",
                Descricao = "Método empírico para cálculo de tempo de concentração"
            },
            new TempoResumo 
            { 
                Metodo = "Dooge", 
                Tempo = resultadoDooge, 
                Ano = "1956",
                Autor = "Dooge",
                Descricao = "Baseado na área de drenagem e declividade"
            },
            new TempoResumo 
            { 
                Metodo = "Ven te Chow", 
                Tempo = resultadoVenteChow, 
                Ano = "1962",
                Autor = "Ven te Chow",
                Descricao = "Método amplamente utilizado em hidrologia"
            }
        };
    }

    protected void Calcular()
    {
        if (objTempoConcentracao.ComprimentoRioPrincipal_L > 0 && objTempoConcentracao.DeclividadeBacia_S > 0)
        {
            ////=0,0663*(C3^0,77)*(C4^-0,385)
            resultadoKirpch = 0.0663 * Math.Pow(objTempoConcentracao.ComprimentoRioPrincipal_L, 0.77) * Math.Pow(objTempoConcentracao.DeclividadeBacia_S, -0.385);
            ////=0,191*(C3^0,76)*(C4^-0,19)
            resultadoCorpsEngineers = 0.191 * Math.Pow(objTempoConcentracao.ComprimentoRioPrincipal_L, 0.76) * Math.Pow(objTempoConcentracao.DeclividadeBacia_S, -0.19);
            ////=0,0977*(C3^0,6)*(C4^-0,3)
            resultadoCarter = 0.0977 * Math.Pow(objTempoConcentracao.ComprimentoRioPrincipal_L, 0.6) * Math.Pow(objTempoConcentracao.DeclividadeBacia_S, -0.3);
            ////=0,365*(C5^0,41)*(C4^-0,17)
            if (objTempoConcentracao.AreaDrenagem_A > 0)
            {
                resultadoDooge = 0.365 * Math.Pow(objTempoConcentracao.AreaDrenagem_A, 0.41) * Math.Pow(objTempoConcentracao.DeclividadeBacia_S, -0.17);
            }

            ////=0,16*(C3^0,64)*(C4^-0,32)
            resultadoVenteChow = 0.160 * Math.Pow(double.Parse(objTempoConcentracao.ComprimentoRioPrincipal_L.ToString().Replace(",", ".")), 0.64) * Math.Pow(double.Parse(objTempoConcentracao.DeclividadeBacia_S.ToString().Replace(",", ".")), -0.32);

            AtualizarGraficosETabelas();
            StateHasChanged();
        }
    }

    protected async Task Salvar()
    {
        if (idBarragemTempoConcentracao == 0)
        {
            flagBarragem = true;
            StateHasChanged();
            return;
        }

        Calcular();

        var tempoConcentracao = new TempoConcentracao()
        {
            ResultadoKirpich = resultadoKirpch,
            ResultadoCorpsEngineers = resultadoCorpsEngineers,
            ResultadoCarter = resultadoCarter,
            ResultadoDooge = resultadoDooge,
            ResultadoVenTeChow = resultadoVenteChow,
            BarragemId = idBarragemTempoConcentracao,
            AreaDrenagem_A = objTempoConcentracao.AreaDrenagem_A,
            ComprimentoRioPrincipal_L = objTempoConcentracao.ComprimentoRioPrincipal_L,
            DeclividadeBacia_S = objTempoConcentracao.DeclividadeBacia_S
        };


        var resultado = await TempoConcentracaoService.GetTempoConcentracao();
        var resultadoFiltrado = resultado.Where(x => x.BarragemId == idBarragemTempoConcentracao).Count() > 0;

        if (resultadoFiltrado && resultado.Count() > 0)
        {
            tempoConcentracao.Id = resultado.Find(x => x.BarragemId == idBarragemTempoConcentracao).Id;
            await TempoConcentracaoService.EditarTempoConcentracao(tempoConcentracao);
        }
        else
        {
            tempoConcentracao.DataCadastro = DateTime.Now;
            await TempoConcentracaoService.CadastrarTempoConcentracao(tempoConcentracao);
        }

        // Recarregar dados após salvar
        await CarregarDadosBarragem();
    }
    protected override async Task OnInitializedAsync()
    {
        lstBarragem = new List<Model.Barragem>();
        lstBarragem = await BarragemService.GetBarragemAsync();


    }

    protected void Submit(TempoConcentracao arg)
    {
        //
    }
}

