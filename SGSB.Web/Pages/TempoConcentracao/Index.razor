@if (dadosCarregados && idBarragemTempoConcentracao > 0)
{
    <RadzenCard class="mb-4">
        <RadzenFieldset Text="Gráfico Comparativo - Tempo de Concentração">
            <RadzenChart ColorScheme="ColorScheme.Palette" Style="height: 400px;">
                <RadzenColumnSeries Data="@dadosGraficoTempo" 
                                    CategoryProperty="Metodo" 
                                    ValueProperty="Tempo" 
                                    Title="Tempo de Concentração (horas)">
                    <RadzenSeriesDataLabels Visible="true" />
                </RadzenColumnSeries>
                <RadzenCategoryAxis Padding="20" />
                <RadzenValueAxis>
                    <RadzenGridLines Visible="true" />
                    <RadzenAxisTitle Text="Tempo (horas)" />
                </RadzenValueAxis>
            </RadzenChart>
        </RadzenFieldset>
    </RadzenCard>

    <RadzenCard class="mb-4">
        <RadzenFieldset Text="Tabela Resumo - Métodos de Cálculo">
            <RadzenDataGrid Data="@tabelaTempo" 
                           AllowFiltering="true" 
                           AllowSorting="true" 
                           AllowPaging="true" 
                           PageSize="10"
                           TItem="TempoResumo">
                <Columns>
                    <RadzenDataGridColumn TItem="TempoResumo" Property="Metodo" Title="Método" />
                    <RadzenDataGridColumn TItem="TempoResumo" Property="Tempo" Title="Tempo (horas)" Format="F4">
                        <Template Context="item">
                            <span style="font-weight: bold; color: #007bff">
                                @item.Tempo.ToString("F4")
                            </span>
                        </Template>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="TempoResumo" Property="Ano" Title="Ano" />
                    <RadzenDataGridColumn TItem="TempoResumo" Property="Autor" Title="Autor" />
                    <RadzenDataGridColumn TItem="TempoResumo" Property="Descricao" Title="Descrição" />
