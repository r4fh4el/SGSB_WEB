@page "/CondicaoFundacao/Cadastro"


@inject CondicaoFundacaoService CondicaoFundacaoService
@inject NavigationManager NavigationManager
@inject Microsoft.JSInterop.IJSRuntime JSRuntime;
@using Model

@using BlazorTable
@using SGSB.Web.Data



<RadzenPanel>
    <HeaderTemplate>
        Cadastro
    </HeaderTemplate>
    <ChildContent>

<EditForm Model="@CondicaoFundacaoModel" OnSubmit="CreateCondicaoFundacao">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="nome" class="control-label">Nome da Condição Fundação</label>
                <InputText @bind-Value="@CondicaoFundacaoModel.Nome" type="Text" class="form-control" />
                <ValidationMessage For="@(()=> CondicaoFundacaoModel.Nome)" />
            </div>




        </div>
       

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>
    </ChildContent>
    <SummaryTemplate>
        Cadastro
    </SummaryTemplate>
</RadzenPanel>
@code {
    private CondicaoFundacao CondicaoFundacaoModel = new CondicaoFundacao();


    protected override async Task OnInitializedAsync()
    {


    }
    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }



    protected async Task CreateCondicaoFundacao()
    {

       await CondicaoFundacaoService.CadastrarCondicaoFundacao(CondicaoFundacaoModel);
        NavigationManager.NavigateTo("CondicaoFundacao/index");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("CondicaoFundacao/index");
    }


}
