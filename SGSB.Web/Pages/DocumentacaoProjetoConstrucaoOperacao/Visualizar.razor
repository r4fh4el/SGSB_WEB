@code {
    private DocumentacaoProjetoConstrucaoOperacao DocumentacaoProjetoConstrucaoOperacaoModel = new DocumentacaoProjetoConstrucaoOperacao();

    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {


       await Ver(Id);
    }

    private async Task ChangeHandler(ChangeEventArgs args)
    {

    }

    public async Task Ver(string Id)
    {
        DocumentacaoProjetoConstrucaoOperacaoModel =  await DocumentacaoProjetoConstrucaoOperacaoService.GetDocumentacaoProjetoConstrucaoOperacaoId(int.Parse(Id));
    }



  
    void Cancel()
    {
        NavigationManager.NavigateTo("DocumentacaoProjetoConstrucaoOperacao/index");
    }


}
